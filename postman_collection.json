{
  "info": {
    "name": "AI-Powered SME Knowledge Base API",
    "description": "Complete API collection for SME Knowledge Base & Auto Advisor",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api/v1",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@test.com\",\n  \"password\": \"Test123!\",\n  \"full_name\": \"Admin User\",\n  \"role\": \"admin\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"access_token\", jsonData.access_token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/login?email=admin@test.com&password=Test123!",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"],
              "query": [
                {
                  "key": "email",
                  "value": "admin@test.com"
                },
                {
                  "key": "password",
                  "value": "Test123!"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Documents",
      "item": [
        {
          "name": "Upload Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/documents/upload",
              "host": ["{{base_url}}"],
              "path": ["documents", "upload"]
            }
          }
        },
        {
          "name": "List Documents",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/documents/?skip=0&limit=50",
              "host": ["{{base_url}}"],
              "path": ["documents", ""],
              "query": [
                {
                  "key": "skip",
                  "value": "0"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            }
          }
        },
        {
          "name": "Get Document",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/documents/:document_id",
              "host": ["{{base_url}}"],
              "path": ["documents", ":document_id"],
              "variable": [
                {
                  "key": "document_id",
                  "value": "your-document-uuid"
                }
              ]
            }
          }
        },
        {
          "name": "Update Document",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"document_type\": \"contract\",\n  \"tags\": [\"legal\", \"vendor\"],\n  \"metadata\": {\n    \"department\": \"legal\",\n    \"priority\": \"high\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/documents/:document_id",
              "host": ["{{base_url}}"],
              "path": ["documents", ":document_id"],
              "variable": [
                {
                  "key": "document_id",
                  "value": "your-document-uuid"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Document",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/documents/:document_id",
              "host": ["{{base_url}}"],
              "path": ["documents", ":document_id"],
              "variable": [
                {
                  "key": "document_id",
                  "value": "your-document-uuid"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "AI Advisor",
      "item": [
        {
          "name": "Ask Question",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"What are my compliance requirements?\",\n  \"context_limit\": 5\n}"
            },
            "url": {
              "raw": "{{base_url}}/advisor/ask",
              "host": ["{{base_url}}"],
              "path": ["advisor", "ask"]
            }
          }
        },
        {
          "name": "Ask About Deadlines",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"What deadlines are coming up in the next 30 days?\",\n  \"context_limit\": 10\n}"
            },
            "url": {
              "raw": "{{base_url}}/advisor/ask",
              "host": ["{{base_url}}"],
              "path": ["advisor", "ask"]
            }
          }
        },
        {
          "name": "Ask About Risks",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"What are the high-risk items in my contracts?\",\n  \"context_limit\": 5\n}"
            },
            "url": {
              "raw": "{{base_url}}/advisor/ask",
              "host": ["{{base_url}}"],
              "path": ["advisor", "ask"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "System Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["health"]
            }
          }
        }
      ]
    }
  ]
}
